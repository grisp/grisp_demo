[erlang]
args = erl.rtems -C multi_time_warp -- -mode embedded -home . -pa . -root {{release_name}} -bindir {{release_name}}/erts-{{erts_vsn}}/bin -boot {{release_name}}/releases/{{release_version}}/start -config {{release_name}}/releases/{{release_version}}/sys.config -kernel inetrc "./erl_inetrc" -internal_epmd epmd_sup -sname {{release_name}} -setcookie grisp -proto_dist inet_tls -ssl_dist_optfile {{release_name}}/lib/{{release_name}}-{{release_version}}/priv/ssl_dist_opts.rel
shell = erlang
on_exit = reboot
on_crash = reboot

[network]
ip_self = dhcp
