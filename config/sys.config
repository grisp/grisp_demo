[
    {grisp_updater_grisp2, [
        {use_client_certificate, false},
        {server_certificates, {priv, grisp_updater, "certificates"}}
    ]},

    {grisp_updater, [
        {system, {grisp_updater_grisp2, #{}}},
        {sources, [
            {grisp_updater_tarball, #{}},
            {grisp_updater_http, #{
                backend => {grisp_updater_grisp2, #{}}
            }}
        ]}
    ]},

    {grisp_cryptoauth, [
        {device, #{
            type => 'ATECC608B',
            i2c_bus => 0,
            i2c_address => 16#6C
        }},
        {templates, [
            {{0, 0}, stritzinger_root},
            {{1, 0}, grisp2_intermediate},
            {{2, 0}, grisp2_device}
        ]}
    ]}
].
